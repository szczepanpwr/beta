<div class="container text-center">
  <h1> Hello! </h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container text-center">
    <br>
    <form>
      <div class="form-group">
        <label> Adres Email </label>
        <br>
        <%= f.email_field :email, autofocus: true,class: 'form-control', placeholder:"Wpisz swój adres email", autocomplete: "email" %>
        <br>
      </div>
      <div class="form-group">
        <label> Hasło </label><br>
        <%= f.password_field :password, autofocus: true,class: 'form-control', placeholder:"Wpisz swoje", autocomplete: "current-password" %>
        <br>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="text-center">
        <%= f.submit "Log in", class: "btn btn-primary mt-1" %>
      </div>
    </form>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
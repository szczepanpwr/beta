<%= form_with(model: animal) do |form| %>
  <% if animal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
        <% animal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-8 col-md-6 m-auto">
        <div class="card border-0 shadow">
          <div class="card-body">
            <div class="text-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg>
            </div>
            <br>
            <form>
              <div class="form-group">
                <%= form.text_field :name, autofocus: true,class: 'form-control', placeholder:"Nazwa zwierzaka" %>
                <br>
              </div>
              <div class="form-group">
                <%= form.text_field :breed, autofocus: true,class: 'form-control', placeholder:"Rasa zwierzaka" %>
                <br>
              </div>
              <div class="form-group">
                <%= form.number_field :age, autofocus: true,class: 'form-control', placeholder:"Wiek zwierzaka" %>
                <br>
              </div>
              <div class="form-group">
                <%= form.text_area :enjoys, autofocus: true,class: 'form-control', placeholder:"Co lubi robić" %>
                <br>
              </div>
              <div class="form-group">
                <div class="text-center">
                  Zdjęcie zwierzaka
                </div>
                <%= form.file_field :image %>
              </div>
              <br>
              <div class="text-center">
                <%= form.submit "Dodaj/Edytuj Zwierzę", class: "btn btn-primary mt-1" %>
              </div>
            </form>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
